<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartcity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:textSize="40dp"
            android:text="Routes"
            android:id="@+id/button2"
            android:onClick="routes"
            android:layout_toEndOf="@+id/route_image_view" />

        <com.felipecsl.gifimageview.library.GifImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/route_image_view"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#f2db2b"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:paddingRight="20dp"
            android:background="#f2db2b"
            android:onClick="busInfo"
            android:text="Bus Info"
            android:id="@+id/button"
            android:layout_toEndOf="@+id/bus_info_image_view" />
    <com.felipecsl.gifimageview.library.GifImageView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:id="@+id/bus_info_image_view"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#7793A3"
        android:layout_height="0dp">
        <Button
            android:layout_width="match_parent"
            android:background="#7793A3"
            android:textSize="40dp"
            android:textAlignment="textEnd"
            android:paddingRight="30dp"
            android:layout_height="match_parent"
            android:text="Vikram\nInfo"
            android:onClick="vikramInfo"
            android:layout_toEndOf="@+id/vikram_image_view" />

    <com.felipecsl.gifimageview.library.GifImageView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/vikram_image_view"/>

    </RelativeLayout>

</LinearLayout>
